pkgname="pmars"
pkgver="0.9.2"
pkgrel=0
pkgdesc="Reference implementation of Corewar game"
url="https://sourceforge.net/projects/corewar/"
arch="all"
license="GPL-2.0-or-later"
makedepends="libx11-dev"
subpackages="$pkgname-doc"
source="http://downloads.sourceforge.net/project/corewar/pMARS/$pkgver/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	make -C src
}

package() {
	# Replace with proper package command(s)
	install -Dm755 -t "$pkgdir/usr/bin/" src/pmars
	install -Dm644 -t "$pkgdir/usr/share/man/man6" doc/pmars.6
}

